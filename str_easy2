string itc_even_place(string str){
string new;
int new2 = 0;
 while(str[i] != '\0'){
  if(str[i] % 2 != 0){
 new  = new + str[i];
}else{
new2 = -1;
}
    }
if(new2 = 0){
return new;
}else{
return -1;
    }
 }
 double itc_percent_lower_uppercase(string str){
 int i, otvet;
 int mini;
 int maxi;
 while(str[i] != '\0'){
        if(str[i] < str[i] + 1){
    mini = mini + 1;
        }else{
   maxi = maxi + 1;     
        }
   i++; 
    }
    otvet = maxi  / mini;
 }
 string itc_reverse_str(string str){
 string reverse = "";
    for (int i = 0; i < itc_len(str) + 1;i++){
        reverse = reverse + itc_len(str) + i;
}
 return reverse;
}
 long long itc_in_pc(int num, int format, int bit){
    long long t = 0, d = 1, per;
    int i = 0;
    string text = "";
        while(num > 0){
   t = t + (num % 2)* d;
    num = num / 2;
    d = d * 10;
    }
    if(t < 0){
        t = -1 * t;
     while(t > 0){
    per = t % 10;
    text = text + (char)('0' + per);
    t = t / 10;
     }
    text[0] = '1';
    if(format == 1){
        return text;
    }
    if(format == 2){
        while(text[i] !='\0'){
            if(text[i] + 1 == 0){
                text[i] + 1 = 1;
                i++;
            }
            if(text[i] + 1 == 1){
                text[i] + 1 = 0;
                i++;
            }
        }
        return text;
    }
    if(format == 3){
                while(text[i] !='\0'){
            if(text[i] + 1 == 0){
                text[i] + 1 = 1;
                i++;
            }
            if(text[i] + 1 == 1){
                text[i] + 1 = 0;
                i++;
            }
        }
        
    }
  }
  if(t > 0){
     while(t > 0){
    per = t % 10;
    text = text + (char)('0' + per);
    t = t / 10;
     }
     text[0] = '0';
}

 }
